{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "./publish/src",
      "baseUrl": "./",
      "declaration": true,
      "importHelpers": true,
      "module": "es2015",
      "sourceMap": true,
      "target": "es2015",
      "types": [
        "node"
      ]
    },
    "files": [
      "./__gen_lib/src/module.ts"
    ],
    "angularCompilerOptions": {
      "annotateForClosureCompiler": true,
      "strictMetadataEmit": true,
      "flatModuleOutFile": "index.js",
      "flatModuleId": "ng-github-button",
      "skipTemplateCodegen": true
    }
  }
